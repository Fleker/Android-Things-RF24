<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Ping Pair Dynamic"
        app:layout_constraintLeft_toLeftOf="@+id/buttonPingOut"
        app:layout_constraintTop_toBottomOf="@+id/buttonCRPingOut"/>

    <Button
        android:id="@+id/buttonPPDPingOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="Ping Out"
        app:layout_constraintLeft_toLeftOf="@+id/buttonPingOut"
        app:layout_constraintTop_toBottomOf="@+id/textView3"/>

    <Button
        android:id="@+id/buttonPPDPongBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="Pong Back"
        app:layout_constraintLeft_toRightOf="@+id/buttonPPDPingOut"
        app:layout_constraintTop_toTopOf="@+id/buttonPPDPingOut"/>

    <Button
        android:id="@+id/buttonPingOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ping Out"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <Button
        android:id="@+id/buttonPongBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pong Back"
        app:layout_constraintLeft_toRightOf="@+id/buttonPingOut"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/buttonPingOut"
        android:layout_marginTop="0dp"/>

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="Stop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonPongBack"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Call Response"
        app:layout_constraintLeft_toLeftOf="@+id/buttonPingOut"
        app:layout_constraintTop_toBottomOf="@+id/buttonPingOut"/>

    <Button
        android:id="@+id/buttonCRPingOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="Ping Out"
        app:layout_constraintLeft_toLeftOf="@+id/buttonPingOut"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <Button
        android:id="@+id/buttonCRPongBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="Pong Back"
        app:layout_constraintLeft_toRightOf="@+id/buttonCRPingOut"
        app:layout_constraintTop_toTopOf="@+id/buttonCRPingOut"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Getting Started Basic"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>
